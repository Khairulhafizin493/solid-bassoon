<script>
    (function() {
        // Daftar 10 zat sesuai urutan kolom
        const zatList = [
            'tembakau', 'alkohol', 'kanabis', 'kokain', 'amfetamin',
            'inhalan', 'sedativa', 'halusinogen', 'opioid', 'lainnya'
        ];

        window.toggleZat = function(selectEl) {
            const zat = selectEl.getAttribute('data-zat');
            const aktif = selectEl.value === 'ya';
            document.querySelectorAll(`select[data-zat="${zat}"]:not(.p1)`).forEach(sel => {
                sel.disabled = !aktif;
                if (!aktif) sel.value = '0';
            });
            hitungTotal();
        };

        window.hitungTotal = function() {
            zatList.forEach(zat => {
                const p1 = document.querySelector(`select.p1[data-zat="${zat}"]`);
                let total = 0;
                if (p1 && p1.value === 'ya') {
                    for (let i = 2; i <= 8; i++) {
                        const sel = document.querySelector(`select.p${i}[data-zat="${zat}"]`);
                        if (sel) total += parseInt(sel.value, 10) || 0;
                    }
                }
                document.getElementById(`total_${zat}`).innerText = total;
                let interp = total >= 27 ? 'Tinggi (intense)' : (total >= 11 ? 'Sedang (short)' : 'Rendah (no)');
                document.getElementById(`interp_${zat}`).innerText = interp;
            });
        };

        window.resetJawaban = function() {
            zatList.forEach(zat => {
                const p1 = document.querySelector(`select.p1[data-zat="${zat}"]`);
                if (p1) p1.value = 'no';
                document.querySelectorAll(`select[data-zat="${zat}"]:not(.p1)`).forEach(sel => {
                    sel.disabled = true;
                    sel.value = '0';
                });
            });
            hitungTotal();
        };

        window.addEventListener('load', function() {
            resetJawaban();
            const tgl = document.getElementById('resp_tgl');
            if (!tgl.value) {
                const today = new Date().toISOString().slice(0,10);
                tgl.value = today;
            }
        });
    })();
</script>
</body>
</html>
